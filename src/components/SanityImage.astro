---
import type { BackgroundImage } from "../data/sanity/types.generated";
import { getSanityImage } from "../utils/getSanityImage";

interface Props {
  node: BackgroundImage["asset"];
  alt?: string | null;
  width?: number;
  fit?: "cover" | "contain";
  aspectRatio?: "1-1" | "4-3" | "16-9" | "9-16";
  mobileAspectRatio?: "1-1" | "4-3" | "16-9" | "9-16";
  loading?: "lazy" | "eager";
}

const {
  node,
  alt,
  width = 960,
  fit = "cover",
  aspectRatio = "16-9",
  mobileAspectRatio = "1-1",
  loading = "lazy",
} = Astro.props;

const image = getSanityImage({ node, width });
---

<style>
  .cover {
    object-fit: cover;
    width: 100%;
  }

  .contain {
    object-fit: contain;
    object-position: top;
    width: 100%;
  }

  .ar-1-1 {
    aspect-ratio: 1/1;
  }

  .ar-4-3 {
    aspect-ratio: 4/3;
  }

  .ar-16-9 {
    aspect-ratio: 16/9;
  }

  .ar-9-16 {
    aspect-ratio: 9/16;
  }

  @media (max-width: 768px) {
    .m-ar-1-1 {
      aspect-ratio: 1/1;
    }

    .m-ar-4-3 {
      aspect-ratio: 4/3;
    }

    .m-ar-16-9 {
      aspect-ratio: 16/9;
    }

    .m-ar-9-16 {
      aspect-ratio: 9/16;
    }
  }
</style>

{
  image && (
    <img
      class={`fade-in ${fit} ar-${aspectRatio} m-ar-${mobileAspectRatio}`}
      loading={loading}
      src={image.url()}
      alt={alt || ""}
    />
  )
}
