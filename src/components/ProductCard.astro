---
export interface Props {
  product: any;
}

const { product } = Astro.props;

if (!product || !product.slug?.current) {
  return null;
}

const productName = product?.customName || product?.name || "Product";
const productPrice = product?.price || "N/A";
const productSlug = product.slug.current;
---

<a
  href={`/products/${productSlug}`}
  class="group overflow-hidden rounded-lg shadow hover:shadow-md transition-shadow"
>
  <div class="relative bg-gray-200 h-64 overflow-hidden">
    {product?.featuredImage ? (
      <img
        src={product.featuredImage.asset.url}
        alt={productName}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400">
        No image
      </div>
    )}
    <div class="absolute inset-0 z-10 flex items-end justify-center opacity-0 group-hover:opacity-100 group-hover:bg-black/20 transition-all">
      <button class="bg-white text-black px-4 py-2 rounded font-semibold mb-4 hover:bg-gray-100">
        Shop now
      </button>
    </div>
  </div>
  <div class="px-4 py-4">
    <h3 class="font-semibold text-sm group-hover:underline">{productName}</h3>
    <p class="text-base font-semibold text-green-700 mt-2">${productPrice}</p>
  </div>
</a>